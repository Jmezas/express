
@{
    ViewBag.Title = "Menu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">
        <h4>
            <i style="margin-right:7px" class="fa fa-bars"></i> MENÚ DEL SISTEMA
        </h4>
    </div>
    <nav class="col-12" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><i class="fa fa-home"></i> <a href="@Url.Action("Principal", "Seguridad")">Principal</a></li>
            <li class="breadcrumb-item active" aria-current="page"><i class="fa fa-bars"></i> Menú</li>
        </ol>
    </nav>
</div>
<div class="row">
    <div class="col-12">
        <div class="form-group pull-right">
            <button class="btn btn-info" id="btnNuevo" data-toggle="modal" data-target="#Nuevo"><i class="fa fa-plus"></i> Nuevo </button>
        </div>
    </div>
</div>
<div class="card cont">
    <div class="table-responsive" id="dvCliente">
        <table class="table table-striped table-bordered" cellspacing="0" style="width:100%" id="tbMenu">
            <thead>
                <tr class="text-tit" style="border:1px;">
                    <th>IdMenu</th>
                    <th>Menu</th>
                    <th>Orden</th>
                    <th>Nombre Menu</th>
                    <th>Vista</th>
                    <th>Controlador</th>
                    <th>Icono</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody class="text-peq"></tbody>
        </table>
    </div>


    @*------- MODAL --------------*@
    <div class="modal fade animate__animated animate__fadeInDown" id="Nuevo" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"> MENU</h5>
                    <input type="hidden" id="hdfId" />
                    <button type="button" class="close animate__animated animate__fadeOutUp" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <input type="hidden" id="IdMenu" />
                <div class="modal-body">
                    <form class="container" id="FrmLogin" novalidate="novalidate">
                        <div class=" " id="FrmLogin">
                            <div class="row">
                                <div class="col-lg-3">
                                    <label>Menu</label>
                                    <select class="form-control input-sm no-null" name="lstMenu" id="lstMenu"></select>
                                </div>

                                <div class="col-lg-2">
                                    <div class="form-group">
                                        <label>Orden</label>
                                        <input type="text" class="form-control" id="txtOrden" name="txtOrden">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <label>Nombre Menu</label>
                                        <input type="text" class="form-control" id="txtMenu" name="txtMenu">
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <label>Vista</label>
                                        <input type="text" class="form-control" id="txtVista" name="txtVista">
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <label>Controlador</label>
                                        <input type="text" class="form-control" id="txtControlador" name="txtControlador">
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <label>Icono</label>
                                        <input type="text" class="form-control" id="txtIcono" name="txtIcono">
                                    </div>
                                </div>
                                <div class="row">
                                   
                                    <div class="col-lg-4">
                                        <br />
                                     
                                        <div class="checkbox checkbox-circle checkbox-info peers ai-c">
                                            <input type="checkbox" id="Estado" name="Estado" class="peer" checked>
                                            <label for="Estado" class="peers peer-greed js-sb ai-c"><span class="peer peer-greed">Estado</span></label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal" id="cerrarpx">cancelar</button>
                    <button type="submit" id="btnGrabar" class="btn btn-primary">Grabar</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script type="text/javascript" src="~/assets/scripts/page/Seguridad/Menu.js"></script>
}



